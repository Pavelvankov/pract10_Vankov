<Page x:Class="pract8.Pages.PriemPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract8.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="550"
      Title="PriemPage"
      Background="{DynamicResource WindowBackground}"
      >

    <Grid Style="{StaticResource Grid1}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label FontSize="30" FontWeight="Bold">Приём пациента</Label>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <TextBlock Text="{Binding CurrentPatient.NameP}"/>
            <TextBlock Text="{Binding CurrentPatient.Birthday}"/>
            <TextBlock Text="{Binding CurrentPatient.PhoneNumberDigits, StringFormat={}{0:8 (000) 000 00 00}}"/>
            <TextBlock Text="{Binding CurrentPatient.Age, StringFormat=Возраст: {0}}"/>
            <TextBlock Text="{Binding CurrentPatient.AdultStatus}"/>
            <TextBlock Text="{Binding CurrentPatient.DaysFromPreviousAppointmentText}"/>
        </StackPanel>

        <Button Grid.Row="2" Style="{StaticResource Button1}" Click="EditPatientButton_Click">Изменить информацию о пациенте</Button>

        <ListView Grid.Row="3" ItemsSource="{Binding CurrentPatient.AppointmentStories}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Style="{StaticResource Border1}">
                        <StackPanel>
                            <TextBlock Text="{Binding Date}"/>
                            <TextBlock Text="{Binding Diagnosis}"/>
                            <TextBlock Text="{Binding Recomendations}"/>
                            <TextBlock Text="{Binding DoctorId}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button Grid.Row="4" Style="{StaticResource Button1}" Click="BackButton_Click" HorizontalAlignment="Left">Назад</Button>
    </Grid>
</Page>
