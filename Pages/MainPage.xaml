<Page x:Class="PriemPatient.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PriemPatient.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="550"
      Title="MainPage"
      Background="{DynamicResource WindowBackground}"
      >

    <Grid Style="{StaticResource Grid1}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="168"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.ColumnSpan="2">
            <Button x:Name="Button1" Style="{StaticResource ButtonAdd}" Click="CreatePatient_btn">Создать пациента</Button>
            <Button x:Name="Button2" Style="{StaticResource Button1}" Click="Priem_btn">Начать прием</Button>
            <Button x:Name="Button3" Style="{StaticResource Button1}" Click="EditPatient_btn">Изменить информацию</Button>
            <Button x:Name="Button4" Style="{StaticResource ButtonDelete}" Click="DeletePatient_btn"></Button>
        </StackPanel>

        <ListView Grid.Row="1"
                  ItemsSource="{Binding Patients}"
                  SelectedItem="{Binding SelectedUser}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ID: "/>
                            <TextBlock Text="{Binding IdP}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Имя: "/>
                            <TextBlock Text="{Binding NameP}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Фамилия: "/>
                            <TextBlock Text="{Binding MiddleNameP}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Дата рождения: "/>
                            <TextBlock Text="{Binding Birthday}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Телефон: "/>
                            <TextBlock Text="{Binding PhoneNumberDigits, StringFormat={}{0:8 (000) 000 00 00}}"/>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Style="{StaticResource StatusBar1}">
            <TextBlock Text="{Binding StatusBarText}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Label/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" Height="160" x:Name="UserInfo" Style="{StaticResource PanelForm}" Margin="17,142,18,0" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="ID Пользователя"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource TextRight}" Text="{Binding CurrentUser.Id}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource TextRight}" Text="{Binding CurrentUser.Name}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Фамилия"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Style="{StaticResource TextRight}" Text="{Binding CurrentUser.LastName}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Отчество"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource TextRight}" Text="{Binding CurrentUser.MiddleName}"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Специализация"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Style="{StaticResource TextRight}" Text="{Binding CurrentUser.Specialisation}"/>
            </Grid>

            <Button Style="{StaticResource Button1}" Click="ResetUser">Выйти</Button>
        </StackPanel>
    </Grid>
</Page>
