<Page x:Class="pract8.Pages.EditPatientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract8.Pages"
      xmlns:validators="clr-namespace:PriemPatient.ValidationRules"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="550"
      Title="EditPatientPage"
      Background="{DynamicResource WindowBackground}"
      >

    <Grid Style="{StaticResource Grid2}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource PanelTitle}">
            <Label FontSize="20" FontWeight="Bold">Редактирование информации пациентов</Label>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Style="{StaticResource PanelField}">
            <TextBlock Text="Фамилия:" Width="100"/>
            <StackPanel>
                <TextBox x:Name="LastnameBox" Width="200">
                    <TextBox.Text>
                        <Binding Path="CurrentPatient.LastNameP" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:InputValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Foreground="Red"
                              FontSize="10"
                              ItemsSource="{Binding ElementName=LastnameBox, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" Foreground="red" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Style="{StaticResource PanelField}">
            <TextBlock Text="Имя:" Width="100"/>
            <StackPanel>
                <TextBox x:Name="nameBox" Width="200">
                    <TextBox.Text>
                        <Binding Path="CurrentPatient.NameP" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:InputValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Foreground="Red"
                              FontSize="10"
                              ItemsSource="{Binding ElementName=nameBox, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" Foreground="red" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Style="{StaticResource PanelField}">
            <TextBlock Text="Отчество:" Width="100"/>
            <StackPanel>
                <TextBox x:Name="MiddlenameBox" Width="200">
                    <TextBox.Text>
                        <Binding Path="CurrentPatient.MiddleNameP" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:InputValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Foreground="Red"
                              FontSize="10"
                              ItemsSource="{Binding ElementName=MiddlenameBox, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" Foreground="red" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" Style="{StaticResource PanelField}">
            <TextBlock Text="Дата рождения:" Width="100"/>
            <StackPanel>
                <TextBox x:Name="BirthdayBox" Width="200">
                    <TextBox.Text>
                        <Binding Path="CurrentPatient.Birthday" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:InputValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Foreground="Red"
                              FontSize="10"
                              ItemsSource="{Binding ElementName=BirthdayBox, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" Foreground="red" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="5" Orientation="Horizontal" Style="{StaticResource PanelField}">
            <TextBlock Text="Телефон:" Width="100"/>
            <StackPanel>
                <TextBox x:Name="PhoneBox" Width="200">
                    <TextBox.Text>
                        <Binding Path="CurrentPatient.PhoneNumber" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                            <Binding.ValidationRules>
                                <validators:InputValidation/>
                            </Binding.ValidationRules>
                        </Binding>
                    </TextBox.Text>
                </TextBox>
                <ItemsControl Foreground="Red"
                              FontSize="10"
                              ItemsSource="{Binding ElementName=PhoneBox, Path=(Validation.Errors)}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding ErrorContent}" Foreground="red" TextWrapping="Wrap"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="7" Orientation="Horizontal" Style="{StaticResource PanelBottomRight}">
            <Button Style="{StaticResource Button1}" Click="SaveButton_Click">Сохранить</Button>
            <Button Style="{StaticResource Button1}" Click="CancelButton_Click">Отмена</Button>
        </StackPanel>
    </Grid>
</Page>
