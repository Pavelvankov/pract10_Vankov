<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="WindowBackground" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="TextColor" Color="#F1F1F1"/>
    <SolidColorBrush x:Key="StatusBarBackground" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="BorderColor" Color="#444444"/>

    <SolidColorBrush x:Key="ButtonBackground" Color="#2B6CB8"/>
    <SolidColorBrush x:Key="ButtonHover" Color="#378CE0"/>
    <SolidColorBrush x:Key="ButtonPressed" Color="#1E4E91"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#2D8AE6"/>

    <SolidColorBrush x:Key="AddBackground" Color="#1F8B1F"/>
    <SolidColorBrush x:Key="AddHover" Color="#166A16"/>
    <SolidColorBrush x:Key="AddPressed" Color="#0F4A0F"/>

    <SolidColorBrush x:Key="DeleteBackground" Color="#E14B4F"/>
    <SolidColorBrush x:Key="DeleteHover" Color="#B7373A"/>
    <SolidColorBrush x:Key="DeletePressed" Color="#8C2A2D"/>
    <SolidColorBrush x:Key="ListBackground" Color="#2D2D2D"/>
    <SolidColorBrush x:Key="ListItemHover" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="ListItemSelected" Color="#444444"/>
    <SolidColorBrush x:Key="MenuBackground" Color="#2A2A2A"/>
    <SolidColorBrush x:Key="MenuForeground" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="MenuHover" Color="#3A3A3A"/>
    <SolidColorBrush x:Key="MenuPressed" Color="#1F1F1F"/>
    <SolidColorBrush x:Key="MenuBorder" Color="#444444"/>




</ResourceDictionary>
